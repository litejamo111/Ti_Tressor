<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Elemoods</h1>
        <div class="d-flex align-items-center">
          <%= link_to '', new_elemood_path, class: "btn btn-success me-2 btn-plus"%>
        </div>
      </div>
      <div class="table-responsive"  style="max-height: 500px; overflow-y: scroll;">
        <table id="gblabs-table" class="table table-striped table-bordered rounded-3">
          <thead class="sticky-top">
            <tr>
              <th>Nombre</th>
              <th>Usuario</th>
              <th>correo</th>
              <th>bitrix</th>
              <th>equipo</th>
              <th>tipo</th>
              <th>ubicacion</th>
              <th>procesador</th>
              <th>grafica</th>
              <th>memoria</th>
              <th>disco</th>
              <th>monitor</th>
              <th>mouse</th>
              <th>teclado</th>
              <th>diadema</th>
              <th>base refrigerante</th>
              <th>celular</th>
              <th>otro accesorio</th>
              <th>observaciones</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="gblabs-body" class="table-group-divider">
            <% @elemoods.each do |elemood| %>
              <%= render elemood %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
