<div class="modal fade" id="destroyConfirmationModal" tabindex="-1" aria-labelledby="destroyConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="destroyConfirmationModalLabel">Confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item?
      </div>
      <div class="modal-footer">
        <%= button_to "Delete", @elemood, method: :delete, class: "btn btn-danger", data: { bs_toggle: "modal", bs_target: "#destroyConfirmationModal" } %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
